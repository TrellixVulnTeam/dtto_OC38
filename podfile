  # Social Login
  pod 'Google/SignIn'
  pod 'FBSDKLoginKit'

  pod 'OneSignal'
  # UI Tweaks
#  pod 'Koloda', :git => 'https://github.com/Yalantis/Koloda', :branch => 'swift-3'
  pod 'SkyFloatingLabelTextField', :git => 'https://github.com/MLSDev/SkyFloatingLabelTextField', :branch => 'swift3'
  pod 'JSQMessagesViewController'
  
  target 'BounceTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BounceUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
